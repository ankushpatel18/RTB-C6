<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cvTableCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        android:layout_margin="@dimen/margin_small">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/ivTable"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:src="@color/colorPrimary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/tvTableLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:paddingHorizontal="10dp"
                android:background="@drawable/black_semi_transparent"
                android:fontFamily="@font/poppins_medium"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/text_large"
                app:layout_constraintBottom_toBottomOf="@id/ivTable"
                app:layout_constraintStart_toStartOf="@id/ivTable" />

        <TextView
                android:id="@+id/tvTableComment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/poppins_medium"
                android:maxLines="2"
                android:textSize="@dimen/text_large"
                android:paddingHorizontal="5dp"
                app:layout_constraintTop_toBottomOf="@id/ivTable"
                app:layout_constraintStart_toStartOf="@id/ivTable"
                app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>